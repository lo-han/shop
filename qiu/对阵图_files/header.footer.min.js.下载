(function(){$(function(){function b(){var j=$(".j_scrollToTop");if(j.length>0){j.click(function(){window.scrollTo(0,0)})}var j=$(".j_backTop");if(j.length>0){j.click(function(){window.scrollTo(0,0)})}}function i(){var j=$(".j_backPrePage");if(j.length>0){j.click(function(){window.history.length<=1?window.location.href="http://sina.cn":window.history.go(-1)})}var j=$(".j_backHistory");if(j.length>0){j.click(function(){window.history.length<=1?window.location.href="http://sina.cn":window.history.go(-1)})}}window.addEventListener("load",function(){b();i()},false);function f(){$(".j_simselect").each(function(){$(this).on("change",function(){var l=$(this),n=l.val(),m=l.find('option[value="'+n+'"]').text(),k=$(this).prev(),j=k.text();k.html((m&&m.length>0)?m:n)})})}function d(j){if(typeof window.onscroll=="function"){var k=window.onscroll;window.onscroll=function(){k();j()}}else{window.onscroll=function(){j()}}}function e(j){searchTimer=setInterval(a,200)}function a(){if(!searchTimer){return}var j=$("#searchInput"),l=$("#searchCross"),k=j?$.trim(j.val()):"";if(l){if(k===""){if(l.css("display")!="none"){l.css("display","none")}}else{if(l.css("display")!="block"){l.css("display","block")}}}}function c(j){if(searchTimer){clearInterval(searchTimer);searchTimer=null}}function g(j){var k=$("#searchInput"),l=$("#searchCross");l&&l.css("display","none");if(k){k.val("");k.focus()}}function h(){if($("#searchInput").length>0&&$("#searchCross").length>0){var k=$("#searchInput"),m=$("#searchCross"),j=k.attr("placeholder"),l=k?$.trim(k.val()):"";if(m&&l===j){m.css("display","none")}$(document).on("focus","#searchInput",e);$(document).on("blur","#searchInput",c);$("#searchCross").on("click tap",g)}}setTimeout(function(){h()},300);window.onpageshow=function(){f();$(".p_search_wrap").find(".j_simselect").eq(0).val("news");$(".p_search_wrap").find(".j_simselect").eq(0).prev().html("站内");$(".footer_search").find(".j_simselect").eq(0).val("news");$(".footer_search").find(".j_simselect").eq(0